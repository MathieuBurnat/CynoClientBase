<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dog.DogFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="21dp" />

    <EditText
        android:id="@+id/clientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="40dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date de naissance"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="193dp" />

    <EditText
        android:id="@+id/dogDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="212dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genre"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="98dp" />

    <RadioGroup
        android:layout_width="182dp"
        android:layout_height="51dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="124dp">


        <RadioButton
            android:id="@+id/rdbMale"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Male" />

        <RadioButton
            android:id="@+id/rdbFemale"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Femelle" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stérile ?"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="275dp" />

    <RadioGroup
        android:layout_width="183dp"
        android:layout_height="55dp"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="305dp">

        <RadioButton
            android:id="@+id/rdbYes"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Oui" />

        <RadioButton
            android:id="@+id/rdbNo"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="No" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chimicalement ?"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="381dp" />

    <RadioGroup
        android:layout_width="183dp"
        android:layout_height="55dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="411dp">

        <RadioButton
            android:id="@+id/rdbYesChemical"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Oui" />

        <RadioButton
            android:id="@+id/rdbNoChemical"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="No" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Couleur"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="483dp" />

    <EditText
        android:id="@+id/dogColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="502dp" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Race"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="578dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Croisée"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="578dp" />


</androidx.constraintlayout.widget.ConstraintLayout>