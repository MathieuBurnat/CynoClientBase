<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.customer.CustomerFragment">

    <EditText
        android:id="@+id/clientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Nom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.262"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:layout_width="183dp"
        android:layout_height="55dp"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="397dp">

        <RadioButton
            android:id="@+id/rdbYes"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Oui" />

        <RadioButton
            android:id="@+id/rdbNo"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="No" />
    </RadioGroup>

    <EditText
        android:id="@+id/dogColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="594dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="182dp"
        android:layout_height="51dp"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="216dp">


        <RadioButton
            android:id="@+id/rdbMale"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Male" />

        <RadioButton
            android:id="@+id/rdbFemale"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Femelle" />

    </RadioGroup>

    <RadioGroup
        android:layout_width="183dp"
        android:layout_height="55dp"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="503dp">

        <RadioButton
            android:id="@+id/rdbYesChemical"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Oui" />

        <RadioButton
            android:id="@+id/rdbNoChemical"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="No" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stérile ?"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="367dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Race"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="670dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Croisée"
        tools:layout_editor_absoluteX="241dp"
        tools:layout_editor_absoluteY="670dp" />

    <EditText
        android:id="@+id/dogDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="304dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chimicalement ?"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="473dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Couleur"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="575dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date de naissance"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="285dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genre"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.211"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clientName"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>